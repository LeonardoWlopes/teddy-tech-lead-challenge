{
	"eslint.workingDirectories": [
		{
			"mode": "auto"
		}
	],
	"cSpell.words": [
		"lefthook"
	],
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.detectIndentation": false,
	"editor.guides.bracketPairs": "active",
	"editor.linkedEditing": true,
	"editor.renderControlCharacters": true,
	"editor.renderWhitespace": "all",
	"editor.tabSize": 4,
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		".editorconfig": "eslint.*, .prettierrc.json, lefthook*, commitlint*, eslint.config.mjs",
		".env": ".env*",
		".gitignore": ".git*",
		"package.json": "tsconfig*, pnpm-lock*, .nvmrc, .releaserc, tailwind*, postcss*, next.config.ts, vite.config.ts, vitest.config.mts, nginx.conf",
		"README.md": "*.md"
	},
	"i18n-ally.keystyle": "flat",
	"i18n-ally.localesPaths": [
		"**/languages/**"
	],
	"i18n-ally.sourceLanguage": "pt-br",
	"tailwindCSS.experimental.classRegex": [
		[
			"cva\\(([^)]*)\\)",
			"[\"'`]([^\"'`]*).*?[\"'`]"
		],
		[
			"cx\\(([^)]*)\\)",
			"(?:'|\"|`)([^']*)(?:'|\"|`)"
		]
	],
	"coverage-gutters.coverageFileNames": [
		"clover.xml"
	]
}